{
    "livePreview.serverRoot": "public",
    "tailwindCSS.experimental.classRegex": [
        ["classes\\s*=\\s*{([^}]*)}", "\"([^\"]*)\""],
        "class\\'\\s*=\\s*\"([^\"]*)\"",
        ["classList\\s*\\(?\\s*{([^}]*)}", "``([^`]*``)"]
    ],
    "tailwindCSS.includeLanguages": {
        "fsharp": "html",
    },
    "files.associations": {
        "*.css": "tailwindcss"
    },
    "[tailwindcss]": {
        "editor.defaultFormatter": "numso.prettier-standard-vscode",
        "editor.formatOnSave": true
    },
}